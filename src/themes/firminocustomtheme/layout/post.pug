html
  head
    meta(charset="utf-8")
    title=page.title + "Firmino Changani"
    link(rel="shortcut icon" href="/blog/img/favicon.png" type="image/png")
    meta(name="description" content=page.description)
    meta(property="og:title" content=page.title + '⁠ — Firmino Changani')
    meta(property="og:description" content=page.description)
    meta(property="og:url" content=page.permalink)
    meta(property="og:site_name" content="Firmino Changani")
    meta(property="og:type" content="blog")
    meta(property="og:image" content=config.url + '/' + page.cover)
    link(rel="stylesheet", href="/blog/css/main.css")
    link(href="https://fonts.googleapis.com/css?family=Press+Start+2P|Roboto:300,400,700&display=swap", rel="stylesheet")
  body
    .container
      include _partial/_header.pug
      .main-grid.wrap
        section.content
          article.post
            div.post__date= date(page.date, "LL")
            h1.post__title=page.title

            div.post__content!=page.content

          #disqus_thread
      
      include _partial/_disqus.pug
      include _partial/_footer.pug