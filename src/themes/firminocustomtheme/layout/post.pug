html
  head
    meta(charset="utf-8")
    title=page.title + "Firmino Changani"
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="shortcut icon" href="/blog/img/favicon.png" type="image/png")
    meta(name="description" content=page.description)
    meta(property="og:title" content=page.title + '⁠ — Firmino Changani')
    meta(property="og:description" content=page.description)
    meta(property="og:url" content=page.permalink)
    meta(property="og:site_name" content="Firmino Changani")
    meta(property="og:type" content="blog")
    meta(property="og:image" content=config.url + '/' + page.cover)
    link(rel="stylesheet", href="/blog/css/main.css")
    link(href="https://fonts.googleapis.com/css?family=Nunito+Sans|Bitter:400,700|Press+Start+2P|Roboto:300,400,700&display=swap", rel="stylesheet")
  body
    .container
      include partial/header.pug
      .main-grid.wrap
        section.content
          article.post
            .post__cover
              img(src=config.url + "/" + page.cover, alt=page.title)

            .post__meta
              .post__date= date(page.date, "LL")
              h1.post__title=page.title

              hr

            div.post__content!=page.content

          include partial/about.pug
      
          #disqus_thread

      include partial/disqus.pug
      include partial/footer.pug