{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "NODE_ENV=production npm run config; hexo generate",
    "build:prod": "NODE_ENV=production ../build.sh",
    "clean": "hexo clean",
    "deploy": "hexo deploy",
    "server": "hexo server",
    "config": "node ./scripts/genConfig.js",
    "start": "rm _config.yml; NODE_ENV=development npm run config; npm run server"
  },
  "hexo": {
    "version": "4.2.1"
  },
  "dependencies": {
    "hexo": "^4.0.0",
    "hexo-browsersync": "^0.3.0",
    "hexo-generator-archive": "^1.0.0",
    "hexo-generator-category": "^1.0.0",
    "hexo-generator-index": "^1.0.0",
    "hexo-generator-tag": "^1.0.0",
    "hexo-renderer-marked": "^2.0.0",
    "hexo-renderer-pug": "^1.0.0",
    "hexo-renderer-sass": "^0.4.0",
    "hexo-server": "^1.0.0"
  },
  "devDependencies": {
    "json-to-pretty-yaml": "^1.2.2"
  }
}
